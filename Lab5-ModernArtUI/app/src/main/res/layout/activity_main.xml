<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="395dp"
            android:layout_height="45dp"
            android:max="5"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:id="@+id/eggplant"
            android:layout_width="182dp"
            android:layout_height="327dp"
            android:background="@color/eggplant"
            android:contentDescription="TODO"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/marsala" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:id="@+id/marsala"
            android:layout_width="182dp"
            android:layout_height="327dp"
            android:background="@color/marsala"
            android:contentDescription="TODO"
            app:layout_constraintTop_toBottomOf="@+id/eggplant"
            app:layout_constraintBottom_toTopOf="@+id/seekBar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:id="@+id/orange"
            android:layout_width="205dp"
            android:layout_height="215dp"
            android:background="@color/orange"
            android:contentDescription="TODO"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/white" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageView
            android:id="@+id/red"
            android:layout_width="205dp"
            android:layout_height="216dp"
            android:background="@color/red"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/white"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"/>
    <ImageView
            android:id="@+id/white"
            android:layout_width="205dp"
            android:layout_height="215dp"
            android:background="@color/white"
            android:contentDescription="TODO"
            app:layout_constraintTop_toBottomOf="@+id/orange"
            app:layout_constraintBottom_toTopOf="@+id/red" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>